<%- include('partials/header.ejs') %>

<main class="form-signin text-center mt-4">
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
        <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %> <% } %> <% if (locals.messages.info) { %> <%
        messages.info.forEach( el => { %>
        <div class="alert alert-info"><%= el.msg %></div>
        <% }) %> <% } %>

<div class="flex items-center justify-center bg-gray-100">
    <div class="px-8 py-6 my-12 text-left bg-white shadow-lg">
        <h3 class="text-2xl font-bold text-center"><%=title %></h3>
        <form action="/login" method="POST">
            <div class="mt-4">
                <div>
                    <label class="block" for="email">Email<label>
                        <input
                            class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1"
                            type="email"
                            id="email"
                            aria-describedby="email"
                            name="email"
                            required
                        />
                </div>
                <div class="mt-4">
                    <label for="password" class="block">Password<label>
                           
                                <input
                                    class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1"
                                    type="password"
                                    id="password"
                                    name="password"
                                    required
                                />
                </div>
                <div class="flex items-baseline justify-between">
                    <button class="button-primary px-6 py-2 mt-4 rounded-lg">Login</button>
                    <a href="/signup" class="text-sm hover:underline"> Don't Have an Account? Sign Up</a>
                </div>
            </div>
        </form>
    </div>
</div>
</main>
    <%- include('partials/footer.ejs') %>