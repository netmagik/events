<%- include('partials/header.ejs') %>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>

    <section>
    <div class="flex items-center justify-center bg-gray-100">
        <div class="px-8 py-6 my-12 text-left bg-white shadow-lg">
            <h3 class="text-2xl font-bold text-center"><%=title %></h3>
            <form action="/signup" method="POST">
                <div class="mt-4">
                    <div>
                        <label class="block" for="username">Username<label>
                            <input
                                class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1"
                                type="text"
                                id="username"
                                aria-describedby="username"
                                name="username"
                                required
                            />
                    </div>
                <div class="mt-4">
                    <div>
                        <label class="block" for="email">Email<label>
                            <input
                                class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1"
                                type="email"
                                id="email"
                                aria-describedby="email"
                                name="email"
                                required
                            />
              
                    </div>
                    <div class="mt-4">
                        <label for="password" class="block">Password<label>
                               
                                    <input
                                        class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1"
                                        type="password"
                                        id="password"
                                        name="password"
                                        required
                                    />
                    </div>
                    <div class="mt-4">
                        <label for="confirmPassword" class="block">Password<label>
                               
                                    <input
                                        class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1"
                                        type="password"
                                        id="confirmPassword"
                                        name="confirmPassword"
                                        required
                                    />
                    </div>
                 
                        <button class="block btn mt-5">Sign Up</button>
                        <a href="/login" class="block text-xs hover:underline"> Already Have an Account? Login</a>
                </div>
            </form>
        </div>
    </div>
</section>



    <%- include('partials/footer.ejs') %>