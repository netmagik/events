<%- include('partials/header.ejs') %>

    <h1>All Events</h1>
    <a class="btn" href="events/add">Add New Event</a>

    <!-- // Events Section -->
    <div class="flex gap-4 justify-center">
    <% if (eventItems != null) {
        eventItems.forEach( el => { %> 

        <div class="block rounded-lg shadow-lg bg-white max-w-sm text-center">
            <div class="py-3 px-6 border-b border-gray-300">
                Posted by ?
            </div>
            <div class="p-6">
                <h5 class="text-gray-900 text-xl font-medium mb-2"><%=el.title%></h5>
                    <p class="text-gray-700 text-base mb-4">
                        Location: <%=el.location%> 
                    </p>
                    <p class="text-gray-700 text-base mb-4">
                        Date: <%= new Date(el.date).toUTCString().split(" ").slice(0, 4).join(" ") %> 
                    </p>
                    <p class="text-gray-700 text-base mb-4">
                        Time: <%=el.time%>
                    </p>
                    <a href="/events/<%=el._id%>" class="mt-3 button-primary">More Info</a>
            </div>
            <div class="py-3 px-6 border-t border-gray-300 text-gray-600">
                Posted: 2 days ago
            </div>
        </div>

    <% }) 
    } %> 
</div>

<a href="/logout">Logout</a>

<%- include('partials/footer.ejs') %>